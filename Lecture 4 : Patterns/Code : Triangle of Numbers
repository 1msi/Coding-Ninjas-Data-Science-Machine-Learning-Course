## Read input as specified in the question.
## Print output as specified in the question.
n=int(input())

num = 1
gap = n - 1
j=1
while j<=n:
    num = j 
    i=1
    while i<=gap : 
        print(" ", end="")
        i=i+1
    gap = gap - 1  
    i=1
    while i<=j:
        print(num, end="") 
        num = num + 1
        i=i+1
      
    num = num - 2
    i=1
    while i<=j-1: 
        print(num, end="") 
        num = num - 1
        i=i+1
    j=j+1
    print() 
